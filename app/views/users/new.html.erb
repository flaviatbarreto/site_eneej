<% if @user.errors.any? %>
	<% for message in @user.errors.full_messages %>
		<%= message %>
	<% end %>
<% end%>

<%= form_for @user do |f| %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>
	
	<p>
		<%= f.submit "Cadastrar" %>
	</p>

<% end %>

<br/>
<%= link_to "Voltar" , users_path %>
